<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CalculatorActivity" parent="android:Theme.Material.Light.NoActionBar" />

    <!--    Calculator themes    -->
    <style name="btnRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginVertical">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="btnNumber">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:onClick">pressNumber</item>
    </style>

    <style name="btnOperator">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FF5722</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:onClick">pressOperator</item>
    </style>

</resources>